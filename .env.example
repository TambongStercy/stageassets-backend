# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/stageasset_dev"

# JWT
JWT_SECRET=your-secret-key-here
JWT_EXPIRES_IN=7d

# Google OAuth (get these from Google Cloud Console)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/auth/google/callback

# Email Configuration
# Development: Gmail via Nodemailer
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# Production: SendGrid
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_FROM=Your App Name <noreply@yourdomain.com>

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# App
PORT=3000
NODE_ENV=development
FRONTEND_URL=http://localhost:5174

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Google Cloud Storage (for later)
GCS_BUCKET_NAME=your-bucket-name
GCS_PROJECT_ID=your-project-id
GCS_KEY_FILE=./gcs-key.json

# Plan Limits / Pricing
# Set to 'false' to disable plan limits for testing/development (allows unlimited events/speakers)
# Set to 'true' to enable plan limits enforcement (production - requires active subscription)
ENABLE_PLAN_LIMITS=false
